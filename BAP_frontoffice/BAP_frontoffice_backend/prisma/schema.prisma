generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model association {
  id                     Int     @id @default(autoincrement())
  name                   String  @unique(map: "Association_name_key")
  siret                  String? @unique(map: "Association_siret_key")
  description            String?
  category               String
  representative_name    String?
  representative_surname String?
  mail                   String?
  phone                  String?
  address                String
  complement_address     String?
  town                   String
  postal_code            String
  longitude              String
  latitude               String
  event                  event[]
}

model event {
  id                 Int         @id @default(autoincrement())
  name               String
  start_date         DateTime
  end_date           DateTime
  id_association     Int
  address            String
  complement_address String?
  town               String
  postal_code        String
  longitude          String
  latitude           String
  association        association @relation(fields: [id_association], references: [id], map: "Event_id_association_fkey")

  @@index([id_association], map: "Event_id_association_fkey")
}

model user {
  id       Int    @id @default(autoincrement())
  email    String @unique(map: "User_email_key")
  username String
  password String
}
